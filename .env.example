APP_NAME=Phast
APP_ENV=local
APP_DEBUG=true

# Cookies
COOKIE_SECRET_KEY=$(head -c 32 /dev/urandom | base64 | tr -dc 'A-Za-z0-9' | head -c 32)
COOKIE_SECURE=true
COOKIE_SAME_SITE=Lax


# Database
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=phast_db
DB_USERNAME=root
DB_PASSWORD=

# Uploads
UPLOAD_MAX_SIZE=10485760 # 10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# PHP Settings
PHP_VERSION=8.2
PHP_MEMORY_LIMIT=256M
PHP_MAX_EXECUTION_TIME=60
PHP_DISPLAY_ERRORS=true
PHP_LOG_ERRORS=true

# Timezone & Locale
APP_TIMEZONE=America/Mexico_City
APP_LOCALE=es

# Mail Settings
MAIL_DRIVER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=admin@example.com
MAIL_FROM_NAME="Phast Admin"

# Cache & Session
CACHE_DRIVER=file
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Queue
QUEUE_CONNECTION=sync

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug